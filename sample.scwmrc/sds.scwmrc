;;; IMHO, this should be the system.scwmrc.

;;; Major ideas:
;;; 1. look as nice as possible (e.g., if an item in the menu has
;;; miniicon, all items will have one)
;;; 2. use as many features as possible (e.g., multiple decors etc), so
;;; that the users will be able to customize this thing easily.

;;; -----------------------
;;; import the scwm modules
;;; -----------------------

(use-modules (app scwm base) (app scwm face) (app scwm decor) (app scwm style)
	     (app scwm winops) (app scwm winlist) (app scwm wininfo)
	     (app scwm optargs) (app scwm std-menus) (app scwm wmconfig-menu))

;; initial desk size
(set-desk-size! 2 2)		; X x Y

(define (write-all port . lst)
  (if (eq? port ()) (set! port (current-output-port)))
  (do ((zz lst (cdr zz))) ((null? zz))
    (if (string? (car zz)) (display (car zz) port) (write (car zz) port))))
;;; print some information
(write-all () " *** Reading `scwmrc'...\nDisplay Size: " (display-size)
	   "\nDesk Size: " (desk-size) "\nViewport Position: "
	   (viewport-position) "\nCurrent Desk: " (current-desk) "\n")

