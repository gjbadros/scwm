SHELL=/bin/sh

@SET_MAKE@

VPATH=@srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
#subdirs=libs utilities scwm sample.scwmrc scheme app
subdirs=utilities scwm sample.scwmrc scheme app icons mini-icons

CFLAGS=@CFLAGS@

all:
	@for i in ${subdirs}; do \
		echo Making all in $$i ; \
		(cd $$i; ${MAKE} all) ; \
	done

install:
	@for i in ${subdirs}; do \
		echo Installing in $$i ; \
		(cd $$i; ${MAKE} install) ; \
	done

depend:
	@for i in ${subdirs}; do \
		echo Depending in $$i ; \
		(cd $$i; ${MAKE} depend) ;\
	done

mostlyclean:
	@for i in ${subdirs}; do \
		echo Mostly Cleaning in $$i ; \
		(cd $$i; ${MAKE} mostlyclean) ; \
	done

clean:
	@for i in ${subdirs}; do \
		echo Cleaning in $$i ; \
		(cd $$i; ${MAKE} clean) ; \
	done

distclean:
	@for i in ${subdirs}; do \
		echo Distribution Cleaning in $$i ; \
		(cd $$i; ${MAKE} distclean) ; \
	done
	rm -f config.cache config.status config.log
	find . -name Makefile -exec rm {} \; -print

