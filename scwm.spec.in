%prep

%setup

%build
./configure --prefix=%{prefix} --enable-fsstd
make 

%install
make prefix=$RPM_BUILD_ROOT/%{prefix} install

%clean
rm -rf $RPM_BUILD_ROOT

%post
/sbin/ldconfig
cd /etc/X11/xdm; patch < %{prefix}/share/scwm/Xsession.patch
install -c -m 755 %{prefix}/share/scwm/gnome-session-Scwm /etc/X11/gdm/Sessions/Scwm

%postun
/sbin/ldconfig
cd /etc/X11/xdm; patch < %{prefix}/share/scwm/Xsession.patch
rm -f %{prefix}/utilities/misc/gnome-session-Scwm /etc/X11/gdm/Session/Scwm

%files
%defattr(-, root, root)

%{prefix}/bin/*
%{prefix}/lib/libscwm*
%{prefix}/lib/scwm/*
%{prefix}/info/*
%{prefix}/man/*
%{prefix}/share/emacs/site-lisp/*
%{prefix}/share/scwm/*
%{prefix}/include/*

%doc ANNOUNCE AUTHORS BUG-REPORTING BUGS COPYING.FVWM COPYING.GPL ChangeLog
%doc INSTALL NEWS README README-constraints THANKS TODO doc
%doc sample.scwmrc/*.scwmrc sample.scwmrc/ChangeLog

%config %{prefix}/lib/X11/scwm/system.scwmrc
