LOCAL_LIBRARIES = $(SCWM_LIBS) $(XLIB)

ScwmProgramTarget(ScwmName)


 PATH_DEFINES = -DSCWM_ICONDIR=\"$(ICONPATH)\" \
		-DSCWMDIR=\"$(SCWMDIR)\" \
		-DSCWMRC=\"$(SCWMRC)\"

SpecialObjectRule(builtins.o, $(SCWM_SRCDIR)/Scwm.tmpl builtins.c, $(PATH_DEFINES))
SpecialObjectRule(read.o, $(SCWM_SRCDIR)/Scwm.tmpl read.c, $(PATH_DEFINES))
SpecialObjectRule(scwm.o, $(SCWM_SRCDIR)/Scwm.tmpl scwm.c, $(PATH_DEFINES))
